{
  "name": "sapper-hacker-news",
  "description": "Hacker News built with Svelte and Sapper",
  "version": "0.0.1",
  "author": "Rich Harris",
  "scripts": {
    "dev": "sapper dev",
    "sapper": "sapper build",
    "export": "sapper export",
    "start": "sapper start",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "stage": "now",
    "deploy": "npm run stage && now alias",
    "predeploy": "git-branch-is master && git diff --exit-code",
    "prestage": "npm run sapper"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "express": "^4.16.3",
    "node-fetch": "^2.1.2",
    "sapper": "^0.14.1",
    "serve-static": "^1.13.1"
  },
  "devDependencies": {
    "git-branch-is": "^2.0.0",
    "now": "^11.2.9",
    "npm-run-all": "^4.1.3",
    "svelte": "^2.9.3",
    "svelte-loader": "^2.9.1",
    "webpack": "^4.16.0"
  },
  "now": {
    "alias": "hn.svelte.technology",
    "files": [
      "assets",
      "build"
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
}
